{% extends 'base-backend.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<a href="{{ path('app_admin_categorie_index') }}" class= "btn btn-dark btn-sm mb-2">Retour à la liste</a>
<div class="d-flex justify-content-between align-items-center">
    <h1>Categorie</h1>
    {{ include('admin_categorie/_delete_form.html.twig') }}

    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ categorie.imageName }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ categorie.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ categorie.slug }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-success">Modifier</a>

{% endblock %}
