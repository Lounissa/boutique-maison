{% extends 'base-backend.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<a href="{{ path('app_admin_produit_index') }}" class= "btn btn-dark btn-sm mb-2">Retour à la liste</a>
<div class="d-flex justify-content-between align-items-center">
    <h1>Produit</h1>
    {{ include('admin_produit/_delete_form.html.twig') }}

    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ produit.imageName }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ produit.updatedAt ? produit.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ produit.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ produit.slug }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}" class="btn btn-success">Modifier</a>

{% endblock %}
