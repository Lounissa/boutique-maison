{% extends 'base-backend.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
   <a href="{{ path('app_admin_article_index') }}" "btn btn-dark btn-sm mb-2">Retour Ã  la liste</a>
<div class="d-flex justify-content-between align-items-center">
    <h1>Article</h1>
    {{ include('admin_article/_delete_form.html.twig') }}
</div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ article.nom }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ article.imageName }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ article.quantite }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.prix }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-success">Modifier</a>

{% endblock %}
